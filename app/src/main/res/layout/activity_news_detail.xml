<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#10BDD5"
        android:gravity="center_vertical">

        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/vector_drawable_back"/>


        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_news_share"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_share"
            android:layout_width="30dp"
            android:layout_height="30dp"/>


        <ImageView
            android:layout_toLeftOf="@id/iv_news_share"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:id="@+id/iv_news_textsize"
            android:background="@drawable/icon_textsize"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

    </RelativeLayout>


    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>